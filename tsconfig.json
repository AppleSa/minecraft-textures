{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "importHelpers": true,
    "outDir": "dist/",
    "declaration": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": ["@types/bun"]
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
